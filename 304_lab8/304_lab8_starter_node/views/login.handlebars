    <div class=" w-1/2 h-3/4 space-y-8 mp5 glass-slate rounded-xl ">
        <div>
            <h3 class="text-4xl my-8 font-light">
                Login to your PC8th account

                {{#if loginMessage}}
                <p class="mt-2 text-center text-sm ">
                    {{loginMessage}}
                </p>
                {{/if}}
        </div>

        <form class="mt-8 " name="MyForm" method="post" action="/validateLogin">
            <div class="space-y-4 rounded-md shadow-sm">
                <div>
                    <label for="username" class=" text-2xl font-medium ">
                        Username
                    </label>
                    <input type="text" name="username" maxlength="25"
                        class="t200e text-center w-full p-3 forms text-white outline-none focus:bg-gray-600 focus:border-slate-900 t200e">
                </div>

                <div>
                    <label for="password" class="text-2xl font-medium ">
                        Password
                    </label>
                    <input type="password" name="password" maxlength="10"
                        class="t200e text-center w-full p-3 forms text-white outline-none focus:bg-gray-600 focus:border-slate-900 t200e">
                </div>
            </div>

            <div>
                <button type="submit" name="Submit2" class="btn w-full">
                    Log In
                </button>
            </div>
        </form>
    </div>
